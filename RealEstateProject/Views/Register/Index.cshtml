
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Kayıt Olma Sayfası</title>

    <!-- Icons font CSS-->
    <link href="~/register/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/register/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/register/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/register/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/register/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-red p-t-50 font-robo">
        <div class="wrapper wrapper--w960">
            <div class="card card-2">
                <div class="card-heading"></div>
                <div class="card-body">
                    <h2 class="title">Kayıt Ekranı</h2>
                    <form method="POST">
                        <div class="input-group">
                            <input class="input--style-2" type="text" placeholder="Adınız" name="Name">
                        </div>
                        <div class="input-group">
                            <input class="input--style-2" type="text" placeholder="Soyadınız" name="Surname">
                        </div>
                        <div class="input-group">
                            <input class="input--style-2" type="text" placeholder="Kullanıcı Adınız" name="UserName">
                        </div>
                        <div class="input-group">
                            <input class="input--style-2" type="email" placeholder="Email Adresiniz" name="Email">
                        </div>
                        <div class="input-group">
                            <input class="input--style-2" type="text" placeholder="Telefon Numaranız" name="Phone">
                        </div>
                        <div class="input-group">
                            <input class="input--style-2" type="password" placeholder="Şifreniz" name="Password">
                        </div>
                        <h4 style="color:red">@ViewBag.mesaj</h4>
                        <div class="p-t-30">
                            <button class="btn btn--radius btn--green" type="submit">Kayıt Ol</button>
                        </div>
                        <br />
                        <p class="w3l-register-p">Hesabın Var Mı ?<a style="color: #00BCD4; text-decoration: none;" href="/Login/Index/" class="register"> Giriş Yap</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/register/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/register/vendor/select2/select2.min.js"></script>
    <script src="~/register/vendor/datepicker/moment.min.js"></script>
    <script src="~/register/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/register/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<!-- end document-->
